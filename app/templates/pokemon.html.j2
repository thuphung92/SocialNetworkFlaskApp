{% extends 'base.html' %}
{% block title %}
Pokemon Lookup
{% endblock %}

{% block content %}
<!-- Main content
============================================= -->
<div class="main-content theme-dark-bg right-chat-active">
    <div class="text-center">
    <img src="{{url_for('static',filename='images/Pokemon-logo.jpg')}}" alt="pokemon logo">
    </div>

    <form action="{{url_for('main.pokemon')}}" method="POST">
        {{ form.hidden_tag() }}
        {{form.pokemon_name.label(class="form-label")}}
        {# searching section #}
        {{form.pokemon_name(class="form-control")}}
        {# submit button #}
        {{form.submit(class="btn btn-primary")}}
    </form>
        {% if pokemon %}
            <div class="container row row-cols-2 pt-5">
                <div class="col-3 text-center">
                    <img src={{pokemon['pokemon_image']}} class="img-fluid rounded mx-auto d-block" alt="pokemon image">
                </div>

                <div class="table-wrapper col-9 table-responsive pr-0">
                    <table class="table table-striped table-hover" style="width:100%">
                        <tr>
                            <th scope="row">Pokemon Name</th>
                            <th scope="col">{{pokemon['pokemon_name']}}</th>
                        </tr>
                        
                        <tr>
                            <th scope="row">Ability</th>
                            <td>{{pokemon['ability_name']}}</td>
                        </tr>
                        
                        <tr>
                            <th scope="row">Base Experience</th>
                            <td>{{pokemon['base_experience']}}</td>
                        </tr>
                        
                        <tr>
                            <th scope="row">Sprite URL</th>
                            <td><a href={{pokemon['sprite_ULR']}}>{{pokemon['sprite_ULR']}} </a></td>
                        </tr>
                    </table>
                </div>
            </div>
    {% endif %}
</div>

{% endblock %}


